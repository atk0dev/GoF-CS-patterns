<Window x:Class="Iterator_SequenceViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="Sequence Viewer" Height="400" Width="165">
    <Grid Background="{StaticResource ClientBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="OutputListBox"
                 Style="{StaticResource ListBoxStyle}">
        </ListBox>
        <Button x:Name="ClickMeButton" Grid.Row="1"
                Style="{StaticResource ButtonStyle}"
                Content="Click Me!"
                Click="ClickMeButton_Click"/>
    </Grid>
</Window>
