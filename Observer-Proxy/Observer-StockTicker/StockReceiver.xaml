<Window x:Class="Observer_StockTicker.StockReceiver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="Manual" Left="500"
        Title="Stock Receiver" Height="175" Width="255">
    <Grid Background="{StaticResource ApplicationBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TextBlock1" Grid.Row="0"
                   Style="{StaticResource TextBlockStyle}" />
        <TextBlock x:Name="TextBlock2" Grid.Row="1"
                   Style="{StaticResource TextBlockStyle}" />
        <TextBlock x:Name="TextBlock3" Grid.Row="2"
                   Text="Total Received: 0"
                   Style="{StaticResource TextBlockStyle}" />
    </Grid>
</Window>
